    "name": "Vladimir Voronkov",
    "email": "vsvoronkov@gmail.com"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "ajv": "^6.10.0",
    "async": "^2.6.2",
    "better-npm-run": "^0.1.1",
    "bfx-facs-db-mongo": "git+https://github.com:bitfinexcom/bfx-facs-db-mongo.git",
    "bfx-svc-boot-js": "git+https://github.com/bitfinexcom/bfx-svc-boot-js.git",
    "bfx-wrk-api": "git+https://github.com/bitfinexcom/bfx-wrk-api.git",
    "colors": "^1.3.3",
    "openpgp": "^4.5.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.0",
    "standard": "^12.0.1"
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "before",
      "after",
      "beforeEach",
      "afterEach"
    ]
  },
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "test/",
      "node_modules/",
      "logs/",
      ".git/",
      ".idea/",
      ".vscode/"
    ]
  },
  "betterScripts": {
    "test": {
      "command": "standard && mocha --opts .mocha.opts",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "scripts": {
    "start": "node worker.js --env=production --wtype=wrk-ext-gpg-api --apiPort 1437",
    "startDev": "nodemon worker.js --env=development --wtype=wrk-ext-gpg-api --apiPort 1437",
    "test": "better-npm-run test"
  }
}
